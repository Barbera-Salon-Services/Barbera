<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    app:cardElevation="15dp"
    app:cardCornerRadius="20dp">
<RelativeLayout
        android:layout_margin="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/service_fragement_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/service_fragement_price"
        android:layout_toEndOf="@id/service_fragement_check_box"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Simple Hair cut" />
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/service_fragement_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <ImageView
        android:id="@+id/subcategoryArrow"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/more_vector"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/service_fragement_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@+id/subcategoryArrow"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Rs 2100" />
    <TextView
        android:id="@+id/service_fragement_cut_price"
        android:layout_toEndOf="@id/service_fragement_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/service_fragement_price"
        tools:text="Rs 201"
        android:textSize="15sp"
        android:layout_toLeftOf="@+id/subcategoryArrow"
        android:layout_marginLeft="10dp"/>
    <view
        android:id="@+id/line"
        android:layout_width="80dp"
        android:layout_height="2dp"
        android:layout_toLeftOf="@+id/subcategoryArrow"
        android:layout_toEndOf="@id/service_fragement_title"
        class="android.widget.TextView"
        android:layout_below="@id/service_fragement_price"
        android:background="#80000000"
        android:layout_marginStart="10dp"
        android:layout_marginTop="11dp"/>
    <ImageView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/service_timer_vector"
        android:layout_below="@id/service_fragement_title"
        android:layout_marginStart="20dp" />
    <TextView
        android:id="@+id/service_fragement_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 Min"
        android:layout_toRightOf="@id/timer"
        android:layout_below="@id/service_fragement_title"
        android:textColor="#009688"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"/>

    <TextView
            android:id="@+id/details"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timer"
            android:layout_marginStart="20dp"
        android:textSize="15sp"
            android:text="- perfect haircut by stylist\n- 5 minute free head relaxation after haircut \n- 100% mess free experience(post serviceItem cleanup gurantee with no hair on the floor"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/book_button"
        android:text="Book Now"
        android:layout_below="@+id/details"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cart_button"
        android:text="Add to cart"
        android:layout_below="@+id/details"
        android:layout_toRightOf="@+id/book_button"/>
</RelativeLayout>
</androidx.cardview.widget.CardView>