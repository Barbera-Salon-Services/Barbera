<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/service_fragement_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Simple Hair cut or hairwash aur itna kuchh ki maja hi aa jayega"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentLeft="true"
        android:textColor="@color/colorAccent"
        android:layout_toLeftOf="@id/service_fragement_check_box"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/service_fragement_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>
    <ImageView
        android:id="@+id/subcategoryArrow"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/more_vector"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/service_fragement_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Rs 2100"
        android:layout_below="@id/service_fragement_title"
        android:layout_marginStart="20dp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/service_fragement_cut_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/service_fragement_price"
        tools:text="Rs 201"
        android:textSize="15sp"
        android:layout_below="@id/service_fragement_title"
        android:layout_marginLeft="10dp"/>
    <view
        android:id="@+id/line"
        android:layout_width="80dp"
        android:layout_height="2dp"
        android:layout_toRightOf="@id/service_fragement_price"
        class="android.widget.TextView"
        android:layout_below="@id/service_fragement_title"
        android:background="#80000000"
        android:layout_marginTop="11dp"/>
    <ImageView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/service_timer_vector"
        android:layout_below="@id/service_fragement_price"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/service_fragement_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 Min"
        android:layout_toRightOf="@id/timer"
        android:layout_below="@id/service_fragement_price"
        android:layout_marginTop="12dp"
        android:textColor="#009688"
        android:layout_marginLeft="5dp"/>

    <TextView
            android:id="@+id/details"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timer"
            android:layout_marginStart="15dp"
            android:text="- perfect haircut by stylist\n- 5 minute free head relaxation after haircut \n- 100% mess free experience(post service cleanup gurantee with no hair on the floor"
        />



</RelativeLayout>