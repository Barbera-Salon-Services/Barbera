<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CongratulationsPage">

    <androidx.cardview.widget.CardView
        android:id="@+id/thanksCard"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/colorAccent"
        android:layout_height="350sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="140sp"
                android:layout_height="140sp"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_checkmark" />

            <TextView
            android:id="@+id/thnks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank You"
                android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="50sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For Believing In Barbera"
                android:textColor="@color/white"
                android:layout_below="@id/thnks"
                android:layout_centerInParent="true"
                android:textSize="30sp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/thanksCard">

        <TextView
            android:id="@+id/accepted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="We Will Reach you soon"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:layout_marginTop="30sp"/>
        <TextView
            android:id="@+id/summaryHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="order summary"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:layout_below="@id/accepted"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/finalSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/summaryHeading"
            android:paddingLeft="20sp"
            android:paddingTop="10sp"
            android:textSize="20sp"
            tools:text="Simple hair cut\nsstylish hair cut\nMakeup"/>

        <TextView
            android:id="@+id/finalPageAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Total \t\t\t\t\tRs 50"
            android:layout_below="@id/finalSummary"
            android:textSize="20sp"
            android:paddingTop="20sp"
            android:paddingLeft="20sp"/>


        <TextView
            android:id="@+id/finalPagedate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Wednesday, 29 July 2020\t\t\t2:05 am"
            android:layout_below="@id/finalPageAmount"
            android:textSize="20sp"
            android:paddingTop="20sp"
            android:paddingLeft="20sp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/backtoHome"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/finalPagedate"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Back To Home Page"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"/>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>
</ScrollView>