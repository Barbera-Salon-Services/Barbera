<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingPage">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="20dp"
        app:cardBackgroundColor="@color/CartBlack">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textColor="@color/white"
                android:text="Booking Page"
                android:textStyle="bold"
                android:textSize="20sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cardView"
        tools:layout_marginTop="-280dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo"
                android:layout_centerHorizontal="true"
                android:padding="20dp"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="12 Aug 2020"
                android:layout_below="@id/chooseDate"
                android:layout_centerHorizontal="true"
                android:paddingTop="20sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/chooseDate"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/logo"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="40sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Choose A Date"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="8:40 PM"
                android:layout_below="@id/chooseTime"
                android:layout_centerHorizontal="true"
                android:paddingTop="20sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/chooseTime"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/date"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20sp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="40sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Choose A Time"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                tools:text="Your address.."
                android:layout_below="@id/time"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/currentAddress"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/time"
                android:layout_marginTop="50dp"
                app:cardBackgroundColor="@color/colorAccent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="40sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Use Registered Address"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="OR"
                android:layout_below="@id/currentAddress"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorAccent"
                android:paddingTop="20sp"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/changeAddress"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_below="@id/or"
                app:cardBackgroundColor="@color/colorAccent"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                app:cardCornerRadius="40sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Change Address"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>

            </androidx.cardview.widget.CardView>


            <EditText
                android:id="@+id/HouseAddress"
                style="@style/SignUpPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/changeAddress"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Enter Complete Building Address..."
                android:inputType="textPostalAddress" />
            <EditText
                android:id="@+id/couponCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Enter Coupon Code"
                android:ems="10"
                android:inputType="textCapCharacters"
                android:layout_toLeftOf="@id/coupon_apply_button"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_below="@id/HouseAddress"/>
            <Button
                android:id="@+id/coupon_apply_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:textColor="@color/white"
                android:layout_below="@id/HouseAddress"
                android:background="@color/colorAccent"
                android:text="apply"/>

            <TextView
                android:id="@+id/booking_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                tools:text="Total Amount Rs 1100"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_below="@id/couponCode"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/confirmBooking"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_below="@id/booking_amount"
                app:cardBackgroundColor="@color/colorAccent"
                android:layout_margin="30dp"
                android:layout_alignParentBottom="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Book Your Service"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>